<UserControl x:Class="RoSatGCS.Controls.DateTimePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:loc="clr-namespace:RoSatGCS.Utils.Localization"
             xmlns:local="clr-namespace:RoSatGCS.Controls"
             xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
             mc:Ignorable="d"
             d:DesignHeight="100" d:DesignWidth="300">
    <UserControl.Resources>
        <local:InvertBoolConverter x:Key="InvertBoolConverter"/>
        <Style x:Key="tbDisplayStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ToggleButton Name="PopUpCalendarButton" MinHeight="24" MinWidth="130"
                      IsChecked="False"
                      IsHitTestVisible="{Binding IsOpen, ElementName=CalendarPopup, Converter={StaticResource InvertBoolConverter}}"
                      FocusVisualStyle="{x:Null}"
                      Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=UserControl}}">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="16" />
                </Grid.ColumnDefinitions>
                <TextBox x:Name="DateDisplay" Style="{StaticResource tbDisplayStyle}"
                         Background="Transparent"/>
                <Path Grid.Column="1" Margin="5,1,2,0" VerticalAlignment="Center" Data="M 0 0 L 4 4 L 8 0 Z"
                      Fill="Black" Stretch="Uniform" HorizontalAlignment="Right" />
            </Grid>
        </ToggleButton>

        <Popup x:Name="CalendarPopup"
               IsOpen="{Binding IsChecked, ElementName=PopUpCalendarButton}"
               PlacementTarget="{Binding ElementName=PopUpCalendarButton}"
               StaysOpen="False"
               AllowsTransparency="True"
               PopupAnimation="Fade">

            <Border Background="{DynamicResource {x:Static adonisUi:Brushes.Layer0BackgroundBrush}}" BorderBrush="{DynamicResource {x:Static adonisUi:Brushes.Layer3BorderBrush}}" BorderThickness="1" Padding="5">
                <StackPanel>
                    <Calendar x:Name="CalDisplay"
                              PreviewMouseUp="CalDisplay_PreviewMouseUp" />
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0" HorizontalAlignment="Right">
                        <ComboBox x:Name="HourSelector" Width="50" ItemsSource="{Binding HourList}"/>
                        <TextBlock Margin="5,0,5,0" Text=":" VerticalAlignment="Center" />
                        <ComboBox x:Name="MinuteSelector" Width="50" ItemsSource="{Binding MinuteList}" />
                        <Button x:Name="SaveTime" Margin="5,0,0,0" Content="{loc:Localization sOkSelect}" Width="40" Click="SaveTime_Click" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</UserControl>