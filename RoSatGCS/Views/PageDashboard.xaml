                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto">
                            <ItemsControl >
                                <!-- ItemsSource="{Binding LogEntries}"-->
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
