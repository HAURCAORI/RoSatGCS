                            <TextBlock Text=" └ OPS_MISSION_STATUS[5]" Style="{StaticResource ContentTextBlock}" Margin="10,150,0,0"/>
                            <Rectangle Style="{StaticResource Splitter}" Margin="180,150,0,0"/>
                            <TextBlock Text="0" Style="{StaticResource ContentTextBlock}"  Margin="190,150,0,0"/>
                        </Grid>
                    </StackPanel>

                    
                </Grid>
            </ScrollViewer>
        </GroupBox>


        <Grid Grid.Row="0" Grid.RowSpan="5" Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1.5"/>
                <ColumnDefinition Width="360"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="160"/>
                <RowDefinition Height="1.5"/>
                <RowDefinition Height="460"/>
                <RowDefinition Height="1.5"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <GridSplitter Grid.Row="0" Grid.Column="1" Grid.RowSpan="5" Background="{DynamicResource {x:Static adonisUi:Brushes.Layer1BackgroundBrush}}"/>
            <GridSplitter Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="1" Background="{DynamicResource {x:Static adonisUi:Brushes.Layer1BackgroundBrush}}"/>
            <GridSplitter Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="1" Background="{DynamicResource {x:Static adonisUi:Brushes.Layer1BackgroundBrush}}"/>

            <GroupBox Grid.Column="3" Grid.Row="0">
                <GroupBox.Header>
                    <TextBlock Text="EPS" FontWeight="Bold" FontFamily="Arial"/>
                </GroupBox.Header>
                <ScrollViewer>
                    <Grid Margin="0,10,0,0">
