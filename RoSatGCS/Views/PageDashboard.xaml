                    <TextBlock Text="0" Style="{StaticResource ContentTextBlock}"  Margin="190,60,0,0"/>

                    <TextBlock Text="UHF_4_UL_PACKET" Style="{StaticResource ContentTextBlock}" Margin="10,90,0,0"/>
