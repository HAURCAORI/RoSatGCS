                </GroupBox.Header>
                <ScrollViewer>
                    <Grid Margin="0,10,0,0">
                        <TextBlock Text="ADCS_MODE" Style="{StaticResource ContentTextBlock}" Margin="10,0,0,0"/>
                        <Rectangle Style="{StaticResource Splitter}" Margin="210,0,0,0"/>
                        <TextBlock Text="0" Style="{StaticResource ContentTextBlock}"  Margin="220,0,0,0"/>

                        <TextBlock Text="ADCS_AD" Style="{StaticResource ContentTextBlock}" Margin="10,30,0,0"/>
