                    <TextBlock Text="0" Style="{StaticResource ContentTextBlock}"  Margin="190,120,0,0"/>
                </Grid>
            </ScrollViewer>
        </GroupBox>

        <GroupBox Grid.Row="2" Grid.Column="0" >
