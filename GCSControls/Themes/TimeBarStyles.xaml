<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:GCSControls">
    <Style TargetType="{x:Type local:TimeBar}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:TimeBar}">
                    <Border Background="{TemplateBinding Background}"
                         BorderBrush="Black"
                         BorderThickness="0 0 0 0.5">
                        <Grid Background="Transparent">
                            <Grid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Auto Panning" IsCheckable="True" IsChecked="{Binding EnableAutoPanning}"/>
                                </ContextMenu>
                            </Grid.ContextMenu>
                        </Grid>

                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>